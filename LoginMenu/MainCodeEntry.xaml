<Window x:Class="LoginMenu.DesignApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginMenu"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
		ResizeMode="NoResize"
        Title="Login" Height="450" Width="500" FontSize="14" Background="#393F44">
	<Border Background="#36383A" CornerRadius="20" Margin="20">
		<StackPanel Margin="20">
			<Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
			<Separator></Separator>
			<Label Content="Username:" Foreground="White" HorizontalAlignment="Center"></Label>
			<TextBox Name="txtUsername" Background="#545d6a" Foreground="white" FontSize="18"></TextBox>
			<Label Content="Password:" Foreground="White" HorizontalAlignment="Center"></Label>
			<TextBox Name="txtPassword" Background="#545d6a" Foreground="white" FontSize="18"></TextBox>
			<Button Name="btnSubmit" Content="Submit" Background="#545d6a" Foreground="black" Margin="5,50,5,5" FontSize="18"></Button>
		</StackPanel>
	</Border>
</Window>
